<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:id="@+id/wrapper_students"
    android:background="@drawable/vh_students_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/student_photo_IV"
            android:layout_width="70dp"
            android:layout_gravity="center_vertical|start"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/avatar_icon">

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">



                <TextView
                    android:id="@+id/name_of_student_TV"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:hint="Имя"
                    android:textColor="@color/black"
                    android:textSize="32sp" />



            </LinearLayout>

            <TextView
                android:id="@+id/dates_of_classes_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:hint="Среда Пятница"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/price_of_lesson_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:hint="800"
            android:textColor="@color/black"
            android:textSize="36sp" />
    </LinearLayout>
    




</androidx.constraintlayout.widget.ConstraintLayout>